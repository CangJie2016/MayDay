            android:id="@+id/et_goal_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="目标名称"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/set_goal_container">
        <TextView
            android:layout_width="0dp"
