            android:layout_weight="1"
            android:gravity="center"
            android:text="所需金额"/>
        <EditText
            android:id="@+id/et_need_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:inputType="number"
            android:hint="金额大小（元）"
            />
