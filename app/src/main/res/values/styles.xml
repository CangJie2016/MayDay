<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/main_tab_font</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:background">@drawable/rb_main_tab_backgroud</item>-->
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    <style name="my_fragment_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="soft_keyboard_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/keyboard_bg</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <!--定制目标界面-->
    <style name="set_goal_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="theme_btn">
        <item name="android:background">@drawable/keyboard_bg</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <!--图表界面顶部切换月份按钮样式-->
    <style name="chart_top_switch_month_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tv_main_theme_text_color</item>
    </style>
</resources>

